<map name="base" type="geocentric" version="2">

    <options>
        <profile>spherical-mercator</profile>
        <terrain driver="rex" morph_imagery="false"/>

        <cache driver = "leveldb">
            <path>../../cache</path>
            <max_size_mb>1000</max_size_mb>
        </cache>
    </options>

    <image driver = "gdal" name = "base-world" visible = "true">
        <url>./world.tif</url>
    </image>

</map>
